<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.springboot.mapper.MemberMapper">
	
	<insert id="register">
		INSERT INTO membermomogo ( user_email, user_pw, user_nickname, user_sex, user_age, user_height, user_weight )
					VALUES ( #{userEmail}, #{userPw}, #{userNickname}, #{userSex}, #{userAge}, #{userHeight}, #{userWeight} )
	</insert>
	
	
	<!-- 
	<select id="read" resultType="Member">
		SELECT *
		FROM membermomogo
		WHERE user_email = #{email}
	</select>
	 -->
	
	<select id="login" resultType="Member">
		SELECT *
		FROM membermomogo
		WHERE user_email = #{userEmail}
			AND user_pw = #{userPw}
	</select>
	
	
	
	
	<resultMap type="Member" id="memberMap">
		<id property="userId" column="user_id" />
		<result property="userId" column="user_id" />
		<result property="userEmail" column="user_email" />
		<result property="userPw" column="user_pw" />
		<result property="userName" column="user_name" />
		<result property="enabled" column="enabled" />
		<result property="regDate" column="reg_date" />
		<result property="updDate" column="upd_date" />
		<collection property="authList" resultMap="authMap">
		</collection>
	</resultMap>

	<resultMap type="MemberAuth" id="authMap">
		<result property="userId" column="user_id" />
		<result property="auth" column="auth" />
	</resultMap>

	<select id="read" resultMap="memberMap">
		SELECT
		mem.user_id, mem.user_email, user_pw, user_nickname, reg_date, upd_date, auth
		FROM
		membermomogo mem LEFT OUTER JOIN membermomogo_auth auth ON mem.user_id = auth.user_id
		WHERE mem.user_email = #{userEmail}
	</select>

	<!-- 
	<select id="read" resultMap="memberMap">
		SELECT
		mem.user_id, mem.user_email, user_pw, user_nickname, '1', reg_date, upd_date, 'ROLE_MEMBER'
		FROM
		membermomogo mem 
		WHERE mem.user_email = #{userEmail}
	</select>
	 -->
	
	
	
	
	


</mapper>